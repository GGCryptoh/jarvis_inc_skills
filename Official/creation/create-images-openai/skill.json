{
  "id": "create-images-openai",
  "title": "Image Generation â€” OpenAI",
  "description": "Generate images using DALL-E 3 (OpenAI)",
  "version": "0.0.3",
  "author": "Jarvis Inc",
  "category": "creation",
  "icon": "Image",
  "tags": ["image", "generation", "art", "design", "dall-e", "openai", "creative"],
  "status": "available",
  "connection_type": "api_key",
  "models": null,
  "default_model": null,
  "fixed_service": "OpenAI",
  "service_type": "fixed",
  "oauth_config": null,
  "curl_example": "curl -X POST https://api.openai.com/v1/images/generations -H \"Content-Type: application/json\" -H \"Authorization: Bearer $OPENAI_API_KEY\" -d '{\"model\": \"dall-e-3\", \"prompt\": \"A pixel art office with retro computers\", \"n\": 1, \"size\": \"1024x1024\"}'",
  "cli_config": null,
  "api_config": {
    "base_url": "https://api.openai.com",
    "auth_header": "Authorization",
    "auth_prefix": "Bearer",
    "vault_service": "OpenAI",
    "api_model": "dall-e-3"
  },
  "execution_handler": null,
  "output_type": "image",
  "collateral": true,
  "handler_runtime": null,
  "files": null,
  "commands": [
    {
      "name": "generate",
      "description": "Generate images from a text prompt using DALL-E 3",
      "parameters": [
        { "name": "prompt", "type": "string", "required": true, "description": "Detailed text description of the image to generate" },
        { "name": "size", "type": "string", "required": false, "description": "Image dimensions: '1024x1024', '1024x1792', '1792x1024'", "default": "1024x1024", "enum": ["1024x1024", "1024x1792", "1792x1024"] },
        { "name": "quality", "type": "string", "required": false, "description": "Image quality: 'standard' or 'hd'", "default": "standard", "enum": ["standard", "hd"] },
        { "name": "style", "type": "string", "required": false, "description": "Style preset: 'vivid' (dramatic, hyper-real) or 'natural' (less hyper-real)", "default": "vivid", "enum": ["vivid", "natural"] }
      ],
      "returns": { "type": "object", "description": "Generated image with URL (expires in ~1 hour), revised prompt, and metadata", "media_type": "image/png" },
      "request": {
        "method": "POST",
        "path": "v1/images/generations",
        "body": {
          "model": "{api_model}",
          "prompt": "{prompt}",
          "n": 1,
          "size": "{size}",
          "quality": "{quality}",
          "style": "{style}",
          "response_format": "b64_json"
        }
      },
      "response": {
        "image_field": "data[0].b64_json",
        "extract": {
          "revised_prompt": "data[0].revised_prompt"
        }
      },
      "post_processors": [
        {
          "type": "upload_image",
          "config": {
            "field": "data[0].b64_json",
            "filename_prefix": "dalle3"
          }
        },
        {
          "type": "estimate_cost",
          "config": {
            "base_cost_usd": 0.04
          }
        }
      ],
      "output_template": "## Generated Image (DALL-E 3)\n\n![{prompt}]({image_url})\n\n**Prompt:** {prompt}\n\n*Revised prompt:* {revised_prompt}"
    },
    {
      "name": "edit",
      "description": "Edit an existing image based on a text prompt (requires DALL-E 2)",
      "parameters": [
        { "name": "image_url", "type": "string", "required": true, "description": "URL of the source image to edit (must be square PNG, max 4MB)" },
        { "name": "prompt", "type": "string", "required": true, "description": "Description of the desired edits" }
      ],
      "returns": { "type": "object", "description": "Edited image object with url and metadata", "media_type": "image/png" }
    },
    {
      "name": "variation",
      "description": "Create variations of an existing image (requires DALL-E 2)",
      "parameters": [
        { "name": "image_url", "type": "string", "required": true, "description": "URL of the source image (must be square PNG, max 4MB)" },
        { "name": "count", "type": "number", "required": false, "description": "Number of variations to generate (1-4)", "default": 1 }
      ],
      "returns": { "type": "array", "description": "Array of variation image objects with urls", "media_type": "image/png" }
    }
  ]
}
